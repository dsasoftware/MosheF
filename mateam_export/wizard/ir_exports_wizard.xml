<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_exports_data">
            <field name="name">ir.exports.wizard</field>
            <field name="model">ir.exports.wizard</field>
            <field name="arch" type="xml">
                <form col="4" string="Exports Informations">
                    <group>
                        <field name="format_file" widget="radio"/>
                        <field name="domain_range" widget="radio"/>
                    </group>
                    <footer>
                        <button string="Export" type="object" name="export_data" class="oe_highlight" />
                        or
                        <button special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
